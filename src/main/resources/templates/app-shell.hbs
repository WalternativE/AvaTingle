{{> partials/top-partial}}

<header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
        <!-- Title -->
        <span class="mdl-layout-title">{{foo}}</span>
    </div>
</header>

<section class="main-container">
    <div class="mdl-card card-centered mdl-shadow--2dp photo-card">
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">Photo Booth</h2>
        </div>
        <div class="mdl-card__media">
            <div id="media-wrapper"></div>
            <!--<video autoplay></video>-->
            <!--<canvas id="image-canvas"></canvas>-->
        </div>
        <div class="mdl-card__supporting-text">
            <p>Here you can take a photo</p>
        </div>
        <div class="mdl-card__actions">
            <button class="mdl-button mdl-js-button mdl-button--raised" id="photo-button">Take Photo</button>
            <button class="mdl-button mdl-js-button mdl-button--raised" id="toast-button">Show Toast</button>
        </div>
    </div>
</section>

<section class="notification-area">
    <div id="toast-container" class="mdl-js-snackbar mdl-snackbar">
        <div class="mdl-snackbar__text"></div>
        <button class="mdl-snackbar__action" type="button"></button>
    </div>
</section>

